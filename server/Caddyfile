localhost:2015 {
  tls off
  errors stderr
  root ../client/dist
  rewrite {
  	to {path} /
  }
  templates
}

localhost:2015/api {
  tls off
  proxy / localhost:8081 {
    without /api
  }
  startup env MARKCO_USER_FILE=users.txt MARKCO_NEWCOMMANDS=../client/html/newcommands.tex stack exec markco-exe &
}

localhost:2015/data {
  tls off
  root ./data
}
